<% content_for :title do %>
  Admin index page
<% end %>
<div id="admin_edit_page">

<h1>Edit Resource</h1>

<form action="/admin/save" method="post">

  <div id="title_input_area" class="panel">
    <h2>Title:</h2>
    <input name="title" id="title" value="<%= @resource['title'] %>" /><br>
    <h2>Uri:</h2>
    <input name="uri" id="uri" value="<%= @resource['uri'] %>" /><br>
    <h2>Tags:</h2>
    <input name="tags" id="tags" value="<%= @resource['tags'] %>" /><br>
    <h2>Short Description:</h2>
    <textarea cols="50" rows="10" name="shortDescription" id="shortDescription" ><%= @resource['shortDescription'] %></textarea><br>
    <h2>Long Description:</h2>
    <textarea cols="50" rows="10" name="longDescription" id="longDescription" ><%= @resource['longDescription'] %></textarea><br>
    <input class="submit" type="submit" value="Save" />
  </div>


</form>

</div>

